//Java program to find all subsets of a given string:

import java.util.Scanner;

public class SubsetOfString {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter a string: ");
        String str = sc.nextLine();

        int n = str.length();
        int count = 0;

        // Finding the total number of possible subsets
        int totalSubsets = (int) Math.pow(2, n);

        // Generating all the possible subsets
        for (int i = 0; i < n; i++) {
            for (int j = i; j < n; j++) {
                String subset = str.substring(i, j + 1);
                System.out.println(subset);
                count++;
            }
        }

        // Displaying the count of subsets generated
        System.out.println("Total number of subsets: " + count);
    }
}
